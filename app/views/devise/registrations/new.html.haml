%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :ニックネーム
    %br/
    = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
  .field
    = f.label :メールアドレス
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :パスワード
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :パスワード（確認用）
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :名字
    \&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp
    \&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp#{f.label :名前}
    %br/
    = f.text_field :last_name, autofocus: true, autocomplete: "family-name"
    = f.text_field :first_name, autofocus: true, autocomplete: "given-name"
  .field
    = f.label :名字（カタカナ）
    \&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp&amp;nbsp#{f.label :名前（カタカナ）}
    %br/
    = f.text_field :lastname_kana, autofocus: true, autocomplete: "family-name"
    = f.text_field :firstname_kana, autofocus: true, autocomplete: "given-name"
  %br/
  .field
    = f.label :生年月日
    %br/
    = f.date_select :birth_day, {start_year: (Time.now.year - 100), end_year: (Time.now.year), include_blank: true}, autofocus: true, autocomplete: "bday"
  .actions
    = f.submit "新規登録"
= render "devise/shared/links"
