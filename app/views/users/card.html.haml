.top-header
  .headerBox
    .headboxUpper
      %h1.logo
        = image_tag asset_path('logo/logo.png'), size: "140x41"
      .searchForm
        %input.searchForm__text{name: "search", placeholder: "キーワードから探す", type: "text", value: ""}/
        .searchForm__submit
          = image_tag asset_path('icon/icon-search 1.png'), size: "20x20", class: ".searchForm__submit--btn"
    .headboxUnder
      .headboxUnder__search
        = link_to "カテゴリー", root_path, class:"headboxUnder__search--left"
        = link_to "ブランド", root_path, class:"headboxUnder__search--right"
      .headboxUnder__user
        - if user_signed_in?
          = link_to "マイページ", "/users/#{current_user.id}", class:"headboxUnder__user__mypage"
        - else
          = link_to "ログイン", new_user_session_path, class:"headboxUnder__user__login"
          = link_to "新規会員登録",new_user_registration_path, class:"headboxUnder__user__register"

.mypage-nav
  %ul.page-lists
    %li.page-lists__list
      = link_to "/" do
        freemarket
        = icon('fa', 'angle-right', class: 'icon')
    %li.page-lists__list--2
      マイページ
.main
  .main__left
    .menu
      %h3.menu__title
        設定
      %ul.menu-lists
        %li.menu-lists__list
          =link_to "root_path" do
            プロフィール
            = icon('fa', 'angle-right', class: 'icon')
        %li.menu-lists__list
          =link_to "delivery_address" do
            発送元・お届け先住所変更
            = icon('fa', 'angle-right', class: 'icon')
        %li.menu-lists__list
          =link_to "card" do
            支払い方法
            = icon('fa', 'angle-right', class: 'icon')
        %li.menu-lists__list
          =link_to "#" do
            メール/パスワード
            = icon('fa', 'angle-right', class: 'icon')
        %li.menu-lists__list
          =link_to "user_information" do
            本人情報
            = icon('fa', 'angle-right', class: 'icon')
        %li.menu-lists__list
          =link_to "#" do
            電話番号の確認
            = icon('fa', 'angle-right', class: 'icon')
        %li.menu-lists__list
          =link_to "log_out" do
            ログアウト
            = icon('fa', 'angle-right', class: 'icon')

  .main__right
    %h2.cardpage-head
      支払い方法
    .cardpage-bottom
      .top
        .top__content
          %h3.sub-head
            クレジットカード一覧
        .card__payment
          - if @cards.present?
            - @cards.each_with_index do |card, i|
              .card__payment__list
                %form.card__payment__list--content
                  .card__list
                    .card__list__picture
                  .card__number
                    = "**** **** **** " + @card_information[i].last4
                  .expire__date
                    - exp_month = @card_information[i].exp_month.to_s
                    - exp_year = @card_information[i].exp_year.to_s.slice(2,3)
                    = exp_month + " / " + exp_year
                = form_tag(delete_card_index_path, method: :delete, id: 'charge-form',  name: "inputForm") do
                  %input{ type: "hidden", name: "card_id", value: "" }
                  %button.delete__button 削除する
        .how__not__regist
          = link_to "支払い方法について", "#", class: "purchase"
        .add-card
          .card-form
            = link_to add_card_user_path(current_user), class: 'submit-btn', data: {"turbolinks" => false}  do
              = icon('far', 'credit-card', class: 'icon')
              クレジットカードを追加する

