= render partial: "shared/header"

.mypage-nav
  %ul.page-lists
    %li.page-lists__list
      = link_to "/" do
        freemarket
        = icon('fa', 'angle-right', class: 'icon')
    %li.page-lists__list--2
      = @user.nickname
      さんのマイページ
.main
  .main__left
    - if current_user.id == @user.id
      .menu
        %h3.menu__title
          設定
          %ul.menu-lists
            %li.menu-lists__list
              =link_to user_path(current_user.id) do
                プロフィール
                = icon('fa', 'angle-right', class: 'icon')
            %li.menu-lists__list
              =link_to delivery_address_users_path do
                発送元・お届け先住所変更
                = icon('fa', 'angle-right', class: 'icon')
            %li.menu-lists__list
              =link_to card_users_path do
                支払い方法
                = icon('fa', 'angle-right', class: 'icon')
            %li.menu-lists__list
              =link_to "#" do
                メール/パスワード
                = icon('fa', 'angle-right', class: 'icon')
            %li.menu-lists__list
              =link_to user_information_users_path do
                本人情報
                = icon('fa', 'angle-right', class: 'icon')
            %li.menu-lists__list
              =link_to "#" do
                電話番号の確認
                = icon('fa', 'angle-right', class: 'icon')
            %li.menu-lists__list
              =link_to log_out_users_path do
                ログアウト
                = icon('fa', 'angle-right', class: 'icon')
  .main__right
    .mypage-user
      = link_to root_path do
        .user-face
          = image_tag asset_path("icon/member_photo_noimage_thumb.png"), size: "60x60"
        %h2.user-name
          = @user.nickname
        .user-information
          .judge
            評価
            %span 0
          .goods
            出品数
            %span 0
    .mypage-contents
      %ul.mypage-tabs
        %li.mypage-tabs__tab
          %h3
            = link_to "#" do
              取引中
        %li.mypage-tabs__tab
          %h3
            = link_to "#" do
              過去の取引
      .tab-content
        %ul.content-action-now
          %li.not-found
            取引中の商品がありません
        %ul.content-action-old
          %li.not-found
            過去に取引した商品がありません

= render partial: "shared/footer"
