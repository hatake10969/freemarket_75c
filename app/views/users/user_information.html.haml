            = icon('fa', 'angle-right', class: 'icon')
  .main__right
    .container
      %h2.container-head
        本人情報の登録
      .form
        = form_with do |f|
          %p
            お客さまの本人情報をご登録ください。
          .field
            .field-label
              = f.label :name, "お名前（全角）"
              %p.info<柏井麻希
          .field
            .field-label
              = f.label :name, "お名前カナ（全角）"
              %p.info<カシワイマキ
          .field
            .field-label
              = f.label :birth_year, "生年月日"
              %p.info<1994/05/29
          .field
            .field-label
              = f.label :post_nunber, "郵便番号"
              %span.no2<任意
            .field-input
              = f.text_field :post_nunber, placeholder: "例)123-4567"
          .field
            .field-label
              = f.label :prefecture_id, "都道府県"
              %span.no2<任意
            .field-input
              = f.collection_select :prefecture_id, Prefecture.all, :id, :name
          .field
            .field-label
              = f.label :city, "市区町村"
              %span.no2<任意
            .field-input
              = f.text_field :city, placeholder: "例)渋谷区"
          .field
            .field-label
              = f.label :address, "番地"
              %span.no2<任意
            .field-input
              = f.text_field :address, placeholder: "例)道玄坂3-2"
          .field
            .field-label
              = f.label :apartment, "建物名"
              %span.no2<任意
            .field-input
              = f.text_field :apartment, placeholder: "例)フォンティスビル7F"
          .actions
            = f.submit "登録する", class: 'btn'
              
