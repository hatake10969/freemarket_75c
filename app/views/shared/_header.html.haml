.top-header
  .headerBox
    .headboxUpper
      %h1.logo
        = image_tag asset_path('logo/logo.png'), size: "140x41"
      .searchForm
        %input.searchForm__text{name: "search", placeholder: "キーワードから探す", type: "text", value: ""}/
        .searchForm__submit
          = image_tag asset_path('icon/icon-search 1.png'), size: "20x20", class: ".searchForm__submit--btn"
    .headboxUnder
      .headboxUnder__search
        = link_to "カテゴリー", root_path, class:"headboxUnder__search--left"
        = link_to "ブランド", root_path, class:"headboxUnder__search--right"
      .headboxUnder__user
        - if user_signed_in?
          = link_to "マイページ", "/users/#{current_user.id}", class:"headboxUnder__user__mypage"
        - else
          = link_to "ログイン", new_user_session_path, class:"headboxUnder__user__login"
          = link_to "新規会員登録",new_user_registration_path, class:"headboxUnder__user__register"