.showcontainer
  .showcontainer__itemContents
    %h2.showcontainer__itemContents__item-name

    .showcontainer__itemContents__images
      .showcontainer__itemContents__images__display-up
        %p.showcontainer__itemContents__images__display-up__badge

      %ul.showcontainer__itemContents__images__display-down




    .showcontainer__itemContents__price
      %h2.showcontainer__itemContents__price__amount
        ¥

      %span.showcontainer__itemContents__price__tax
        (税込)
      %span.showcontainer__itemContents__price__shippingConst
        送料込み


    .showcontainer__itemContents__item-btns
      - if user_signed_in? && current_user.id == @item.user_id
        = link_to "商品を削除する", "#", class: "showcontainer__itemContents__item-btns--left"
        = link_to "商品を編集する", "#", class: "showcontainer__itemContents__item-btns--right"
      - elsif user_signed_in? && current_user.id
        = link_to "購入画面に進む", purchase_item_path(@item), class: "showcontainer__itemContents__item-btns--center"


    .showcontainer__itemContents__item-introduction


    %table.showcontainer__itemContents__details
      %tbody
        %tr
          %th
            出品者
          %td
            = link_to  "仮置", "#"
        %tr
          %th
            カテゴリー
          %td
            .category
            = link_to @grandparent_category.name , "#" unless @grandparent_category == nil
            .category
            = link_to @parent_category.name , "#" unless @parent_category == nil
            .category
            = link_to @this_category.name , "#"
        %tr
          %th
            ブランド
          %td
          
        %tr
          %th
            商品の状態
          %td

        %tr
          %th
            大きさ
          %td

        %tr
          %th
            配送元
          %td

        %tr
          %th
            配送料負担
          %td

        %tr
          %th
            配送日数
          %td
          


    .showcontainer__itemContents__user-btn
      %button.showcontainer__itemContents__user-btn__left
        %i.fas.fa-star
        %span
          お気に入り
        %span
          = rand (100)
      %button.showcontainer__itemContents__user-btn__right
        %i.fas.fa-flag
        %span
          不適切な商品の通報


  .showcontainer__messages
    .showcontianer__messages__box
      .showcontianer__messages__box__form
        %textarea.showcontainer__messages__box__form__text
        %p.showcontainer__messages__box__form__notice
          相手のことを考え丁寧なコメントを心がけましょう。
          %br
          不快な言葉遣いなどは利用制限や退会処分となることがあります。
        %button.showcontainer__messages__box__form__btn
          %i.fas.fa-comment
          %span
            コメントする


  %ul.showcontainer__prevLink
    %li.showcontainer__prevLink__flex
      = link_to "" do
        %i.fas.fa-angle-left
        前の商品
    %li.showcontainer__prevLink__flex
      = link_to "" do
        次の商品
        %i.fas.fa-angle-right


  .showcontainer__related-item
    = link_to "#", "#" ,{class: "showcontainer__related-item__link"}

